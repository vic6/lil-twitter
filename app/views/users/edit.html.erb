<% provide(:title, 'Edit user') %>
<% provide(:button_text, 'Save changes') %>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <p>Notifications</p>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank" rel="noopener">Change</a>
    </div>
  </div>
</div>

<h2>SMS Server Notifications</h1>
<p>Click the button to test sending sms.</p>
<div class="row">
  <div class="panel well col-md-6">
  <a class="btn btn-success btn-lg btn-block" href="/text">Raise Test Error</a>
  <hr>
  </div>
</div>
